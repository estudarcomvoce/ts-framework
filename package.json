{
  "name": "ts-framework",
  "version": "2.1.2",
  "description": "A minimalistic web framework for TS",
  "author": "Luis Brito <luis@nxtep.io>",
  "license": "MIT",
  "main": "./dist/index.js",
  "typings": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "{lib,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "build": "tsc",
    "prebuild": "rimraf ./dist",
    "test": "jest --config jest.json",
    "lint": "tslint --config tslint.json --project .",
    "docs": "./scripts/docs.sh",
    "predocs": "rimraf ./docs",
    "release": "yarn run -s build && yarn run -s docs",
    "console": "node --require ts-node/register --experimental-repl-await lib/repl",
    "coveralls": "((cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js) || true)"
  },
  "dependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.38",
    "@types/lodash": "^4.14.116",
    "async": "^2.5.0",
    "base64url": "^2.0.0",
    "body-parser": "^1.18.2",
    "clean-stack": "^1.3.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-oauth-server": "^2.0.0",
    "express-useragent": "^1.0.8",
    "git-rev-sync": "^1.9.1",
    "hat": "^0.0.3",
    "helmet": "^3.13.0",
    "lodash": "^4.17.10",
    "method-override": "^2.3.10",
    "multer": "^1.3.0",
    "pjson": "^1.0.9",
    "raven": "^2.2.1",
    "request-ip": "^2.0.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.0",
    "ts-framework-common": "estudarcomvoce/ts-framework-common#v2",
    "typescript": "^3.0.1",
    "urijs": "^1.19.0",
    "url-join": "^4.0.0",
    "winston-raven-sentry": "^1.0.1"
  },
  "devDependencies": {
    "@types/async": "^2.0.49",
    "@types/body-parser": "^1.16.5",
    "@types/cookie-parser": "^1.4.1",
    "@types/jest": "^23.3.1",
    "@types/method-override": "^0.0.31",
    "@types/multer": "^1.3.7",
    "@types/raven": "^2.5.1",
    "@types/supertest": "^2.0.3",
    "@types/url-join": "^0.8.2",
    "coveralls": "^3.0.0",
    "husky": "^1.0.0-rc.13",
    "jest": "22.4",
    "lint-staged": "^7.2.0",
    "mongodb-memory-server": "^1.8.0",
    "nodemon": "^1.12.1",
    "nxtep-typedoc-theme": "nxtep-io/nxtep-typedoc-theme",
    "prettier": "^1.14.0",
    "supertest": "^3.0.0",
    "ts-jest": "22.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-no-circular-imports": "^0.5.0",
    "typedoc": "^0.9.0"
  }
}
